<drop event="Fall" name="terrDestroyedWoodDebris" count="0" prob="0.0" stick_chance="0"/>
<property name="TakeDelay" value="15"/>
<property name="DescriptionKey" value="workbenchDesc"/>
<property name="EconomicValue" value="776"/>
