<configs>
<!-- Bandanapierce Mod -->
<!-- remove bartering display on Cigar -->
<remove xpath="//item_display/item_display_info[@display_type='clothingCigar']/display_entry[@name='BarteringBuying']"/>

<!-- add noise reduction and cold resist to bandana -->
<append xpath="/ui_display_info/item_display">
	<item_display_info display_type="clothingBandana" display_group="groupAttire">
		<display_entry name="HyperthermalResist" title_key="statHyperthermalResist" display_type="Decimal1" display_leading_plus="true"/>
		<display_entry name="dNoiseMultiplier" title_key="statNoiseReduction" display_type="Percent" display_leading_plus="true"/>		
	</item_display_info>
</append>

<!-- add bartering selling and exp gain to piercings -->
<append xpath="/ui_display_info/item_display">
	<item_display_info display_type="clothingFacialPiercings" display_group="groupAttire">
		<display_entry name="BarteringSelling" title_key="statBarteringSelling" display_type="Percent" display_leading_plus="true"/>
		<display_entry name="dPlayerExpGain" title_key="statShowPlayerExpGain" display_type="Percent" display_leading_plus="true"/>
	</item_display_info>
</append>

<!-- add bartering buying and cold resist to Cigar -->
<append xpath="/ui_display_info/item_display/item_display_info[@display_type='clothingCigar']">
		<display_entry name="HypothermalResist" title_key="statHypothermalResist" display_type="Decimal1" display_leading_plus="true"/>
		<display_entry name="BarteringBuying" title_key="statBarteringBuying" display_type="Percent" display_leading_plus="true"/>
</append>

</configs>
