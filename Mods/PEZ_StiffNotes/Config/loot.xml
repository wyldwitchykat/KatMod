<configs>

    <!-- Chance to show up as often as Treasure Maps. -->
    <append xpath="/lootcontainers/lootgroup/item[@group='groupTreasureMaps' and @loot_prob_template='veryLow']/..">
        <item name="noteSkillPEZ" count="1" loot_prob_template="veryLow" />
    </append>

    <append xpath="/lootcontainers/lootgroup/item[@group='groupTreasureMaps' and @loot_prob_template='low']/..">
        <item name="noteSkillPEZ" count="1" loot_prob_template="low" />
    </append>

    <!-- Low chance to show up in T1 chest that can contain perk books. -->
    <append xpath="/lootcontainers/lootgroup[@name='groupReinforcedChestT1_05']">
        <item name="noteSkillPEZ" count="1" loot_prob_template="low" />
    </append>

    <!-- Low chance to show up in T2 chest that can contain perk books. -->
    <append xpath="/lootcontainers/lootgroup[@name='groupReinforcedChestT2_07']">
        <item name="noteSkillPEZ" count="1" loot_prob_template="low" />
    </append>

    <!-- Chance to show up as often as Rare Books. -->
    <append xpath="/lootcontainers/lootgroup/item[@group='booksRareOnlyScaled' and @loot_prob_template='veryLow']/..">
        <item name="noteSkillPEZ" count="1" loot_prob_template="veryLow" />
    </append>

    <append xpath="/lootcontainers/lootgroup/item[@group='booksRareOnlyScaled' and @loot_prob_template='med']/..">
        <item name="noteSkillPEZ" count="1" loot_prob_template="med" />
    </append>

    <!-- Chance to show up in Air Drops. -->
    <append xpath="/lootcontainers/lootgroup[@name='groupAirDrop03']">
        <item name="noteSkillPEZ" count="1" />
    </append>
</configs>