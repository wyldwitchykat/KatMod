<?xml version="1.0" encoding="utf-8"?>
<configs>
  <append xpath="/blocks/block[@name='bedroll']">
    <property name="BuffsWhenWalkedOn" value="buffCloudsHealing" />
  </append>
  <append xpath="/blocks/block[@name='bedrollBlockVariantHelper']">
    <property name="DescriptionKey" value="bedrollDesc" />
  </append>
  <append xpath="/blocks">
    <block name="HealinggurneyBed">
      <property name="CustomIcon" value="gurneyBed" />
      <property name="DescriptionKey" value="HealinggurneyBedDesc" />
      <property name="Material" value="Mmetal_weak" />
      <property name="Shape" value="ModelEntity" />
      <property name="Path" value="solid" />
      <property name="Model" value="Entities/Furniture/gurneyPrefab" param1="main_mesh" />
      <property name="Place" value="TowardsPlacerInverted" />
      <property name="MultiBlockDim" value="1,1,2" />
      <property name="ModelOffset" value="0,.5,.5" />
      <property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab" />
      <property name="IsTerrainDecoration" value="true" />
      <property name="DisplayType" value="blockMulti" />
      <property class="RepairItems">
        <property name="resourceScrapIron" value="20" />
      </property>
      <property name="Collide" value="movement,melee,bullet,arrow,rocket" />
      <property name="FallDamage" value=".6" />
      <property name="EconomicBundleSize" value="10" />
      <property name="EconomicValue" value="1000" />
      <property name="OnlySimpleRotations" value="true" />
      <property name="FuelValue" value="50" />
      <property name="MaxDamage" value="2500" />
      <property name="Stacknumber" value="10" />
      <property name="BuffsWhenWalkedOn" value="buffCloudsHealing1" />
      <property name="CanPickup" value="false" />
      <property name="Group" value="Basics,Building,advBuilding,Science" />
      <property name="FilterTags" value="MC_building,fdecor,fother,ffurniture" />
      <drop event="Harvest" name="resourceMetalPipe" count="2,3" tag="salvageHarvest" />
      <drop event="Harvest" name="resourceScrapIron" count="6" tag="allHarvest" />
      <drop event="Harvest" name="resourceScrapPolymers" count="2,4" tag="allHarvest" />
      <drop event="Destroy" name="resourceScrapIron" count="1,3" />
      <drop event="Fall" name="resourceScrapIron" count="5" prob="1" stick_chance="0" />
      <property name="Tags" value="medicalSkill" />
      <property name="UnlockedBy" value="craftingMedical,HealinggurneyBedSchematic" />
    </block>
    <block name="HealinghospitalBed">
      <property name="Extends" value="gurneyBed" />
      <property name="CustomIcon" value="hospitalBed" />
      <property name="DescriptionKey" value="HealinghospitalBedDesc" />
      <property name="Material" value="Mmetal" />
      <property name="Shape" value="ModelEntity" />
      <property name="Path" value="solid" />
      <property name="Model" value="Entities/Furniture/hospitalBedPrefab" param1="main_mesh" />
      <property name="Place" value="TowardsPlacerInverted" />
      <property name="MultiBlockDim" value="1,3,2" />
      <property name="ModelOffset" value="0,.5,.5" />
      <property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab" />
      <property name="IsTerrainDecoration" value="true" />
      <property name="DisplayType" value="blockMulti" />
      <property class="RepairItems">
        <property name="resourceScrapIron" value="20" />
      </property>
      <property name="Collide" value="movement,melee,bullet,arrow,rocket" />
      <property name="FallDamage" value=".6" />
      <property name="EconomicBundleSize" value="10" />
      <property name="EconomicValue" value="25000" />
      <property name="OnlySimpleRotations" value="true" />
      <property name="FuelValue" value="100" />
      <property name="MaxDamage" value="5000" />
      <property name="Stacknumber" value="10" />
      <property name="BuffsWhenWalkedOn" value="buffCloudsHealing2" />
      <property name="CanPickup" value="false" />
      <property name="Group" value="Basics,Building,advBuilding,Science" />
      <property name="FilterTags" value="fdecor,fother,ffurniture" />
      <drop event="Harvest" name="resourceMetalPipe" count="3,6" tag="salvageHarvest" />
      <drop event="Harvest" name="resourceScrapIron" count="12" tag="allHarvest" />
      <drop event="Harvest" name="resourceScrapPolymers" count="4,8" tag="allHarvest" />
      <drop event="Destroy" name="resourceScrapIron" count="5,25" />
      <drop event="Fall" name="resourceScrapIron" count="10" prob="1" stick_chance="0" />
      <property name="Tags" value="medicalSkill" />
      <property name="UnlockedBy" value="craftingMedical,HealinghospitalBedSchematic" />
    </block>
  </append>
</configs>