<?xml version="1.0" encoding="utf-8"?>
<configs>
  <remove xpath="/blocks/block[@name='rugBear']"></remove>
  <append xpath="/blocks">
    <block name="rugBear">
      <property name="CreativeMode" value="Player" />
      <property name="Class" value="SleepingBag" />
      <property name="IndexName" value="brBlock" />
      <!-- need this to show the bigger covering area -->
      <property name="DescriptionKey" value="bedGroupDesc" />
      <property name="Stacknumber" value="10" />
      <property name="Material" value="Mplants" />
      <property name="Shape" value="ModelEntity" />
      <property name="Model" value="Entities/Decor/rugBearPrefab" />
      <property name="MultiBlockDim" value="1,2,1" />
      <!-- <property name="GndAlign" value="1"/> -->
      <property name="WaterFlow" value="permitted" />
      <property name="DropMeshfile" value="@:Other/Items/Misc/sack_droppedPrefab.prefab" />
      <property name="Place" value="TowardsPlacerInverted" />
      <property name="OnlySimpleRotations" value="true" />
      <property name="Collide" value="movement,melee,bullet,arrow,rocket" />
      <property name="FuelValue" value="20" />
      <property name="EconomicValue" value="10" />
      <property name="EconomicBundleSize" value="10" />
      <property name="MaxDamage" value="100" />
      <property name="FallDamage" value=".8" />
      <property name="CanPickup" value="true" param1="rugBearBlockVariantHelper" />
      <property name="IsTerrainDecoration" value="true" />
      <property class="RepairItems">
        <property name="resourceLeather" value="20" />
      </property>
      <drop event="Harvest" name="resourceLeather" count="5" tag="allHarvest" />
      <drop event="Destroy" name="resourceLeather" count="1,3" />
      <drop event="Fall" name="resourceLeather" count="5" prob="1" stick_chance="0" />
      <property name="SortOrder1" value="B433" />
      <property name="SortOrder2" value="0001" />
      <property name="Group" value="Basics,Building,advBuilding" />
      <property name="FilterTags" value="MC_building,SC_decor" />
    </block>
  </append>
</configs>