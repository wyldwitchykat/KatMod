<configs>

<append xpath="/buffs">
	<buff name="buffVehiclesWithAC" name_key="AC/Heater" description_key="AC/Heater is ON! Feels great!" icon="ui_game_symbol_light_armor" icon_color="0,255,0">
			<stack_type value="ignore"/>
			<duration value="0"/>
	        <effect_group>
				<passive_effect name="HypothermalResist" operation="base_add" value="90"/>
				<passive_effect name="HyperthermalResist" operation="base_add" value="90"/>
				<triggered_effect trigger="onSelfBuffUpdate" action="ModifyCVar" cvar="$WetTempModifierActive" operation="subtract" value=".4"/>
				<triggered_effect trigger="onSelfBuffUpdate" action="RemoveBuff" buff="buffElementWet"/>
			</effect_group>
	</buff>

	<buff name="buffNoLongerInVehicle" name_key="AC/Heater" description_key="buffVehiclesWithACDesc" icon="ui_game_symbol_light_armor" icon_color="255,0,0" icon_blink="true">
				<stack_type value="ignore"/>
				<duration value="2"/>
				<display_value value="duration"/>
			<effect_group>
				<passive_effect name="HypothermalResist" operation="base_add" value="90"/>
				<passive_effect name="HyperthermalResist" operation="base_add" value="90"/>
			</effect_group>
		</buff>				
</append>

<append xpath="/buffs/buff[@name='buffStatusCheck01']">

	<effect_group>
		<requirement name="IsAttachedToEntity"/>
		<triggered_effect trigger="onSelfBuffUpdate" action="AddBuff" buff="buffVehiclesWithAC"/>
	</effect_group>	
	
	<effect_group>
		<requirement name="!IsAttachedToEntity"/>
		<requirement name="HasBuff" buff="buffVehiclesWithAC"/>
		<triggered_effect trigger="onSelfBuffUpdate" action="AddBuff" buff="buffNoLongerInVehicle"/>
		<triggered_effect trigger="onSelfBuffUpdate" action="RemoveBuff" buff="buffVehiclesWithAC"/>
	</effect_group>
</append>
</configs>
