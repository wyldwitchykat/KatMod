<xui_windows>

	<remove xpath="//window[@name='windowResponses']"/>

	<insertAfter xpath="//window[@name='windowStatement']">

		<window name="windowResponses" pos="-750,50" width="740" height="400" anchor="RightCenter" cursor_area="true">

			<sprite depth="1" name="background" sprite="ui_game_text_body_back" />

			<scrollbar	name="scrollbar"
					depth="75"
					pos="710,-200"
					width="25"
					height="395"
					padding="4"
					foregroundcolor="[mediumGrey]"
					foregroundsprite="menu_empty3px"
					pivot="center" />

			<scrollview name="scrollable_response" depth="50" scrollbar="scrollbar" reset_position="true" over_scroll="false" scroll_speed=".25">
					<grid name="items" pos="0,-100" rows="70" cols="1" width="590" height="200" cell_width="590" cell_height="40" repeat_content="true" arrangement="vertical" controller="DialogResponseList">
						<response_entry id="0" />
					</grid>
			</scrollview>

		</window>

	</insertAfter>

</xui_windows>