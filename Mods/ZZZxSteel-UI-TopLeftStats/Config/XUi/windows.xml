<mod>

<append xpath="/windows">
	<window name="windowTopLeftStats" depth="100" anchor="LeftTop" pos="70,-40" width="350" height="100" controller="HUDStatBar" visible="{statvisible}" >
		<grid rows="2" cols="6" cell_width="80" cell_height="80" arrangement="horizontal" >
			<!-- Temperature -->
			
			<rect>
				<sprite depth="1" name="icon_bg"  sprite="ui_widget_bg" style="style_sprite_info_icon_bg" />
				<sprite depth="2" name="icon" sprite="ui_game_symbol_temperature" style="style_sprite_info_icon" />
				<label depth="2"  name="text" style="style_label_outline, style_label_info_widget"  text="{playercoretemp}" controller="MapStats" />	
			</rect>

			
			<!-- Elevation -->
			<rect>
				<sprite depth="1" name="icon_bg"  sprite="ui_widget_bg" style="style_sprite_info_icon_bg" />
				<sprite depth="2" name="icon" sprite="ui_game_symbol_climb" style="style_sprite_info_icon" />
				<label depth="2"  name="text" style="style_label_outline, style_label_info_widget"  text="{mapelevation}" controller="MapStats" />	
			</rect>

			
			<!-- Travel Distance -->
			<rect>
				<sprite depth="1" name="icon_bg"  sprite="ui_widget_bg" style="style_sprite_info_icon_bg" />
				<sprite depth="2" name="icon" sprite="ui_game_symbol_run" style="style_sprite_info_icon" />
				<label depth="2"  name="text" style="style_label_outline, style_label_info_widget"  text="{playertraveled}"  />	
			</rect>
			
			<!-- Mobility -->
			<rect>
				<sprite depth="1" name="icon_bg"  sprite="ui_widget_bg" style="style_sprite_info_icon_bg" />
				<sprite depth="2" name="icon" sprite="ui_game_symbol_agility" style="style_sprite_info_icon" />
				<label depth="2"  name="text" style="style_label_outline, style_label_info_widget"  text="{playermobility}%"  />	
			</rect>
			
			<!-- Loot Stage -->
			<rect>
				<sprite depth="1" name="icon_bg"  sprite="ui_widget_bg" style="style_sprite_info_icon_bg" />
				<sprite depth="2" name="icon" sprite="ui_game_symbol_treasure" style="style_sprite_info_icon" />
				<label depth="2"  name="text" style="style_label_outline, style_label_info_widget"  text="{playerlootstage}"  />	
			</rect>
			
			<!-- Zombie Kills -->
			<rect>
				<sprite depth="1" name="icon_bg"  sprite="ui_widget_bg" style="style_sprite_info_icon_bg" />
				<sprite depth="2" name="icon" sprite="ui_game_symbol_skull" style="style_sprite_info_icon" />
				<label depth="2"  name="text" style="style_label_outline, style_label_info_widget"  text="{playerzombiekills}"  />	
			</rect>
		</grid>
	  </window>	
</append>

</mod>