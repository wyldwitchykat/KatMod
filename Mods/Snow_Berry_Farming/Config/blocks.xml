<configs>
	
	<!-- fixes icon for snow berry seeds -->
	<set xpath="/blocks/block[@name='plantedSnowberry1']/property[@name='CustomIcon']/@value">plantedBlueberry1</set>
	
	<!-- makes snow berry seeds visible in creative menu -->
	<set xpath="/blocks/block[@name='plantedSnowberry1']/property[@name='CreativeMode']/@value">Player</set>
	
	<!-- fixes snow berries to grow into final state that recieves crop harvesting bonuses -->
	<set xpath="/blocks/block[@name='plantedSnowberry2']/property[@name='PlantGrowing.Next']/@value">plantedSnowberry3HarvestPlayer</set>
	
	<append xpath="/blocks/block[@name='plantedSnowberry1']"><property name="CustomIconTint" value="ccffff"/></append>

</configs>