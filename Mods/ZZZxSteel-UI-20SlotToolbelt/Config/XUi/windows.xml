<xui_windows>

<remove xpath="//window[@name='windowToolbelt']"/>
<append xpath="/windows">
	<window name="windowToolbelt" width="1" height="1" depth="5" anchor="CenterBottom" pos="0,80" backgroundcolor="[black]" cursor_area="true" controller="ToolbeltWindow" >
		<rect pos="-400,0" controller="Toolbelt" >
			<grid depth="10" name="inventory" rows="1" cols="10" cell_width="80" cell_height="75" repeat_content="true">
			  <toolbelt_item_stack name="0" cell_size="75" cell_half="37" />
			</grid>
			<grid depth="10" name="inventory2" rows="1" cols="10" pos="0,78" cell_width="80" cell_height="75" repeat_content="true" visible="{secondrow}">
			  <toolbelt_item_stack name="0" cell_size="75" cell_half="37" />
			</grid>
		</rect>
  </window>
</append>

</xui_windows>