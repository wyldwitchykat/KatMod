<?xml version="1.0" encoding="UTF-8"?>

<configs>
	<!-- *** Quest Difficulty -->
	<append xpath="/quests/quest/property[@name='difficulty_tier'][@value='1']/..">
		<reward type="SkillPoints" value="1" />
	</append>
	
	<append xpath="/quests/quest/property[@name='difficulty_tier'][@value='2']/..">
		<reward type="SkillPoints" value="2" />
	</append>
	
	<append xpath="/quests/quest/property[@name='difficulty_tier'][@value='5']/..">
		<reward type="SkillPoints" value="5" />
	</append>
	
	<!-- *** Reward based on quest tier -->
	
	<append xpath="/quests/quest/variable[@name='difficulty'][@value='2']/..">
		<reward type="SkillPoints" value="1" />
	</append>
	
	<append xpath="/quests/quest/variable[@name='difficulty'][@value='3']/..">
		<reward type="SkillPoints" value="2" />
	</append>
	
	<append xpath="/quests/quest/variable[@name='difficulty'][@value='4']/..">
		<reward type="SkillPoints" value="2" />
	</append>
	
	<append xpath="/quests/quest/variable[@name='difficulty'][@value='5']/..">
		<reward type="SkillPoints" value="3" />
	</append>
	
	<append xpath="/quests/quest/variable[@name='difficulty'][@value='6']/..">
		<reward type="SkillPoints" value="3" />
	</append>
	
	<!-- *** Tier Quest complete -->
	<append xpath="/quests/quest/property[@name='name_key'][@value='quest_tier1_complete']/..">
		<reward type="SkillPoints" value="1" />
	</append>
	
	<append xpath="/quests/quest/property[@name='name_key'][@value='quest_tier2_complete']/..">
		<reward type="SkillPoints" value="2" />
	</append>
	
	<append xpath="/quests/quest/property[@name='name_key'][@value='quest_tier3_complete']/..">
		<reward type="SkillPoints" value="3" />
	</append>
	
	<append xpath="/quests/quest/property[@name='name_key'][@value='quest_tier4_complete']/..">
		<reward type="SkillPoints" value="4" />
	</append>
	
	<append xpath="/quests/quest/property[@name='name_key'][@value='quest_tier5_complete']/..">
		<reward type="SkillPoints" value="5" />
	</append>
	
	<append xpath="/quests/quest/property[@name='name_key'][@value='quest_tier6_complete']/..">
		<reward type="SkillPoints" value="6" />
	</append>
</configs>