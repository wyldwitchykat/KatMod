<config>
	<append xpath="/ui_display_info/item_display">
		<item_display_info display_type="Iceomatic" display_group="groupConsumables">
			<display_entry name="$waterAmountAdd" title_key="statWaterAmount"/>
			<display_entry name="$foodAmountAdd" title_key="statFoodAmount"/>
			<display_entry name="dStaminaRegen" title_key="statStaminaRegen" display_type="Percent"/>
			<display_entry name="dHyperthermalResist" title_key="statHyperthermalResist" display_leading_plus="true"/>
			<display_entry name="dDuration" title_key="statDuration" display_type="Time"/>
		</item_display_info>
	
	</append>
	
	<append xpath="/ui_display_info/crafting_category_display">
	
		<crafting_category_list display_type="icemachine">
			
			<crafting_category name="IMFood/Cooking" icon="ui_game_symbol_cold" display_name="Ice and Snow" />
			<crafting_category name="IMDrink/Cooking" icon="ui_game_symbol_beer" display_name="Frozen Drinks" />
			<crafting_category name="IMFrozenFood/Cooking" icon="ui_game_symbol_hunger" display_name="Frozen Food"/>
		</crafting_category_list>
		
		
	</append>

</config>