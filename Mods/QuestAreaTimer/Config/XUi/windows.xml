<dizor>
	<append xpath="/windows">   
		<window name="QuestAreaTimer" width="600" height="200" pos="0,0" anchor="CenterTop" controller="QuestTrackerWindow" visible="{staywithinwarning}" depth="-20">
			<!-- need to keep this grid to have controller operable -->
			<grid name="objectiveList" rows="8" cols="1" pos="9000,-44" cell_width="300" cell_height="26" repeat_content="true" arrangement="vertical" controller="QuestTrackerObjectiveList"
				complete_icon="ui_game_symbol_check" incomplete_icon="ui_game_symbol_x" complete_color="[green]"  >
				<quest_objective_tracker_entry />
			</grid>
			
			<label pos="0,150" text_key="lblQuestAreaTimer" font_size="32" justify="center" pivot="center" upper_case="true" width="590" height="45" depth="3" />
			<label pos="0,100" text="{staywithintimeleft}" color="{staywithintimecolor}" font_size="42" justify="center" pivot="center" width="590" height="55" depth="3" />
		</window>
	</append>
</dizor>
