<configs>


	<append xpath="/entity_classes">

		<entity_class name="EntityLootContainerMilitary">
			<property name="Mesh" value="LootContainers/zpackPrefab"/>
			<property name="ModelType" value="Custom"/>
			<property name="Prefab" value="Backpack"/>
			<property name="Class" value="EntityLootContainer"/>
			<property name="Parent" value="Backpack"/>
			<property name="IsEnemyEntity" value="false"/>
			<property name="TimeStayAfterDeath" value="300"/>
			<property name="LootListOnDeath" value="155"/>
			<!-- used to determine container X/Y size -->
			<property name="Faction" value="none"/>
		</entity_class>

		<entity_class name="EntityLootContainerHazmat">
			<property name="Mesh" value="LootContainers/zpackPrefab"/>
			<property name="ModelType" value="Custom"/>
			<property name="Prefab" value="Backpack"/>
			<property name="Class" value="EntityLootContainer"/>
			<property name="Parent" value="Backpack"/>
			<property name="IsEnemyEntity" value="false"/>
			<property name="TimeStayAfterDeath" value="300"/>
			<property name="LootListOnDeath" value="156"/>
			<!-- used to determine container X/Y size -->
			<property name="Faction" value="none"/>
		</entity_class>

		<entity_class name="EntityLootContainerNurse">
			<property name="Mesh" value="LootContainers/zpackPrefab"/>
			<property name="ModelType" value="Custom"/>
			<property name="Prefab" value="Backpack"/>
			<property name="Class" value="EntityLootContainer"/>
			<property name="Parent" value="Backpack"/>
			<property name="IsEnemyEntity" value="false"/>
			<property name="TimeStayAfterDeath" value="300"/>
			<property name="LootListOnDeath" value="157"/>
			<!-- used to determine container X/Y size -->
			<property name="Faction" value="none"/>
		</entity_class>

		<entity_class name="EntityLootContainerUtility">
			<property name="Mesh" value="LootContainers/zpackPrefab"/>
			<property name="ModelType" value="Custom"/>
			<property name="Prefab" value="Backpack"/>
			<property name="Class" value="EntityLootContainer"/>
			<property name="Parent" value="Backpack"/>
			<property name="IsEnemyEntity" value="false"/>
			<property name="TimeStayAfterDeath" value="300"/>
			<property name="LootListOnDeath" value="158"/>
			<!-- used to determine container X/Y size -->
			<property name="Faction" value="none"/>
		</entity_class>
	</append>

	<append xpath="/entity_classes/entity_class[@name='zombieNurse']">
		<property name="LootDropEntityClass" value="EntityLootContainerNurse"/>
	</append>

	<append xpath="/entity_classes/entity_class[@name='zombieSoldier']">
		<property name="LootDropEntityClass" value="EntityLootContainerMilitary"/>
	</append>


	<append xpath="/entity_classes/entity_class[@name='zombieMaleHazmat']">
		<property name="LootDropEntityClass" value="EntityLootContainerHazmat"/>
	</append>

	<append xpath="/entity_classes/entity_class[@name='zombieUtilityWorker']">
		<property name="LootDropEntityClass" value="EntityLootContainerUtility"/>
	</append>


</configs>