<configs>

	
	<append xpath="/Sounds">
					
	<SoundDataNode name="WarPigTruck_horn"> <AudioSource name="Sounds/AudioSource_SmallHorn"/>
	<Noise ID="4" noise="60" time="3" heat_map_strength="0.2" heat_map_time="90"/>
	<AudioClip ClipName="#@modfolder:Resources/TruckSounds.unity3d?TruckHorn"/>
	<AudioClip ClipName="#@modfolder:Resources/TruckSounds.unity3d?TruckHorn"/>
	<AudioClip ClipName="#@modfolder:Resources/TruckSounds.unity3d?TruckHorn"/>
	<LocalCrouchVolumeScale value="1.0"/> <CrouchNoiseScale value="1"/> <NoiseScale value="1"/> <MaxVoices value="3"/> <MaxEntities name="6"/> <MaxRepeatRate value="0.01"/> </SoundDataNode>
	
	<SoundDataNode name="WarPigTruck_idle_lp"> <AudioSource name="Sounds/AudioSource_Vehicle"/>
	<AudioClip ClipName="#@modfolder:Resources/TruckSounds.unity3d?TruckIdling2" Loop="true"/>
	<LocalCrouchVolumeScale value="1.0"/> <CrouchNoiseScale value="0.5"/> <NoiseScale value="1"/> <MaxVoices value="10"/> <MaxRepeatRate value="0.01"/> </SoundDataNode>

	<SoundDataNode name="WarPigTruck_max_speed_lp"> <AudioSource name="Sounds/AudioSource_Vehicle"/>
	<AudioClip ClipName="#@modfolder:Resources/TruckSounds.unity3d?TruckDrive" Loop="true"/>
	<LocalCrouchVolumeScale value="1.0"/> <CrouchNoiseScale value="0.5"/> <NoiseScale value="1"/> <MaxVoices value="20"/> <MaxRepeatRate value="0.01"/> </SoundDataNode>	
		
	<SoundDataNode name="WarPigTruck_accel1"> <AudioSource name="Sounds/AudioSource_Vehicle"/>
	<Noise ID="3" noise="30" time="3" muffled_when_crouched="0.65" heat_map_strength="0.05" heat_map_time="60"/>
	<AudioClip ClipName="#@modfolder:Resources/TruckSounds.unity3d?TruckDrive"/>
	<LocalCrouchVolumeScale value="1.0"/> <CrouchNoiseScale value="0.5"/> <NoiseScale value="1"/> <MaxVoices value="2"/> <MaxRepeatRate value="0.01"/> </SoundDataNode>	

	<SoundDataNode name="WarPigTruck_startup"> <AudioSource name="Sounds/AudioSource_Vehicle"/>
	<Noise ID="2" noise="11" time="3" muffled_when_crouched="0.5"/>
	<AudioClip ClipName="#@modfolder:Resources/TruckSounds.unity3d?TruckStart"/>
	<AudioClip ClipName="#@modfolder:Resources/TruckSounds.unity3d?TruckStart"/>
	<LocalCrouchVolumeScale value="1.0"/> <CrouchNoiseScale value="0.5"/> <NoiseScale value="1"/> <MaxVoices value="10"/> <MaxRepeatRate value="0.01"/> </SoundDataNode>

	<SoundDataNode name="WarPigTruck_shutoff"> <AudioSource name="Sounds/AudioSource_Vehicle"/>
	<Noise ID="2" noise="11" time="3" muffled_when_crouched="0.5"/>
	<AudioClip ClipName="#@modfolder:Resources/TruckSounds.unity3d?TruckShutOff"/>
	<LocalCrouchVolumeScale value="1.0"/> <CrouchNoiseScale value="0.5"/> <NoiseScale value="1"/> <MaxVoices value="10"/> <MaxRepeatRate value="0.01"/> </SoundDataNode>

	</append>
	
</configs>	