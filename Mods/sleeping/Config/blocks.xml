<configs>
  <append xpath="/blocks">
   <block name="sleepingblock">
    <property name="Class" value="Alarmclock, sleeping"/>
	<property name="CustomIcon" value="clock"/>
	<property name="MaxDamage" value="2"/>
	<property name="DescriptionKey" value="clockDesc"/>
	<property name="Material" value="Mwood_regular"/>
	<property name="Material" value="Mstone_scrap"/>
	<property name="Shape" value="ModelEntity"/>
	<property name="Model" value="#@modfolder:Resources/clock.unity3d?clock.prefab"/>
	<property name="EconomicValue" value="10"/>
	<property name="EconomicBundleSize" value="20"/>
	<property name="FuelValue" value="300"/>
	<property class="RepairItems">
		<property name="resourceWood" value="3"/>
	</property>
	<drop event="Destroy" name="sleepingblock" count="1" prob="1"/>
	<property name="SortOrder1" value="M020"/>
	<property name="SortOrder2" value="0000"/>
	<property name="Group" value="Building,advBuilding"/>
	<property name="Tags" value="wood"/>
	<property name="FilterTags" value="MC_building"/>
</block>
  </append>
</configs>